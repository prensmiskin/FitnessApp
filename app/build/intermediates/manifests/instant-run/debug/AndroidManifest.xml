<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stuarthinchliff.fitnessapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="25" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.stuarthinchliff.fitnessapp.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.stuarthinchliff.fitnessapp.StartWorkout"
            android:label="@string/title_activity_start_workout"
            android:parentActivityName="com.stuarthinchliff.fitnessapp.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.stuarthinchliff.fitnessapp.MainActivity" />
        </activity>
        <activity
            android:name="com.stuarthinchliff.fitnessapp.ExerciseDetails"
            android:label="@string/title_activity_exercise_details"
            android:parentActivityName="com.stuarthinchliff.fitnessapp.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.stuarthinchliff.fitnessapp.MainActivity" />
        </activity>
        <activity
            android:name="com.stuarthinchliff.fitnessapp.CreateWorkout"
            android:label="@string/title_activity_create_workout"
            android:parentActivityName="com.stuarthinchliff.fitnessapp.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.stuarthinchliff.fitnessapp.MainActivity" />
        </activity>
    </application>

</manifest>